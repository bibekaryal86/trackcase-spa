{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@app/*": ["src/app/*"],
      "@calendars/*": ["src/calendars/*"],
      "@cases/*": ["src/cases/*"],
      "@clients/*": ["src/clients/*"],
      "@collections/*": ["src/collections/*"],
      "@constants/*": ["src/constants/*"],
      "@courts/*": ["src/courts/*"],
      "@filings/*": ["src/filings/*"],
      "@home/*": ["src/home/*"],
      "@judges/*": ["src/judges/*"],
      "@ref_types/*": ["src/types/*"],
      "@users/*": ["src/users/*"],
    },
    "baseUrl": ".",
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
  ],
}
